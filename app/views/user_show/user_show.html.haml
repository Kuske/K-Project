= stylesheet_link_tag "user_show", :media => "all"
%body
  .all
    .demo-card-wide.mdl-card.mdl-shadow--2dp
      .mdl-card__title
        .mdl-card__title-text
          User Profile
      .mdl-card__supporting-text
        %ul.demo-list.mdl-list
          %li.mdl-list__item
            %span.mdl-list__item-primary-content
              Username : #{@user[:username]}
          %li.mdl-list__item
            %span.mdl-list__item-primary-content
              Comment : #{@user[:comment]}
      .mdl-card__actions.mdl-card--border
        %a.mdl-button.mdl-button--colored.mdl-js-ripple-effect.mdl-js-button{:href=>"http://localhost:3000"}
          Go back
